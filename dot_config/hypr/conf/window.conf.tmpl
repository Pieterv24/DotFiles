# ----------------------------------------------------- 
# General window layout and colors
# ----------------------------------------------------- 

general {
    gaps_in = 10
    gaps_out = 14
    border_size = 3
    col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.inactive_border = rgba(595959aa)
    {{- if .hy3 }}
    layout = hy3
    {{- else }}
    layout = dwindle
    {{- end }}
    resize_on_border = true
}